{
  "name": "Mapper App",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "description": "Sample flogo app",
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "$env[HTTPPORT]"
      },
      "handlers": [
        {
          "action": {
            "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
            "data": {
              "flowURI": "res://flow:mapper_flow"
            },
            "mappings": {
              "input": [
                {
                  "mapTo": "event",
                  "type": "assign",
                  "value": "$.pathParams.event"
                },
                {
                  "mapTo": "content",
                  "type": "assign",
                  "value": "$.content"
                }
              ],
              "output": [
                {
                  "mapTo": "code",
                  "type": "assign",
                  "value": "$.code"
                },
                {
                  "mapTo": "data",
                  "type": "assign",
                  "value": "$.message"
                }
              ]
            }
          },
          "settings": {
            "method": "POST",
            "path": "/demo/:event"
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:mapper_flow",
      "data": {
        "name": "Mapper Flow",
        "metadata": {
          "input": [
            {
              "name": "event",
              "type": "string"
            },
            {
              "name": "content",
              "type": "any"
            }
          ],
          "output": [
            {
              "name": "code",
              "type": "integer"
            },
            {
              "name": "message",
              "type": "any"
            }
          ]
        },
        "tasks": [
          {
            "id": "log_2",
            "name": "LogInput",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
              "input": {
                "flowInfo": false,
                "addToFlow": true
              },
              "mappings": {
                "input": [
                  {
                    "type": "expression",
                    "value": "string.concat(\"Received event \", $flow.event, \": \", $flow.content)",
                    "mapTo": "message"
                  }
                ]
              }
            }
          },
