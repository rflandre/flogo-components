          {
            "from": "log_2",
            "to": "app_16"
          },
          {
            "from": "app_16",
            "to": "log_17",
            "type": "expression",
            "value": "$flow.event == \"first\""
          },
          {
            "from": "log_17",
            "to": "jsmapper_18"
          },
          {
            "from": "jsmapper_18",
            "to": "actreturn_19"
          },
          {
            "from": "app_16",
            "to": "log_20",
            "type": "expression",
            "value": "$flow.event == \"list\""
          },
          {
            "from": "log_20",
            "to": "jsmapper_21"
          },
          {
            "from": "jsmapper_21",
            "to": "actreturn_22"
          }
        ]
