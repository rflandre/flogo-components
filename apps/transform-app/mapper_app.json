              "input": {
                "flowInfo": false,
                "addToFlow": true
              },
              "mappings": {
                "input": [
                  {
                    "type": "assign",
                    "value": "$activity[app_16].value.vehicle[0]",
                    "mapTo": "message"
                  }
                ]
              }
            }
          },
          {
            "id": "jsmapper_18",
            "name": "Map First",
            "description": "JSONata Mapper Activity",
            "activity": {
              "ref": "github.com/yxuco/flogo-components/activity/jsmapper",
              "input": {
                "mapexpr": "{\"port\":{{$env[HTTPPORT]}},\"event\":{{$flow.event}},\"street\":{{$flow.content}}.address.street,\"message\":{{$activity[log_2].message}},\"vehicle\":{{$activity[app_16].value}}.vehicle[0].{\"make\":make,\"year\":year,\"vin\":vin.value}}"
              }
            }
          },
          {
            "id": "actreturn_19",
            "name": "Return First",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/actreturn",
              "input": {
                "mappings": [
                  {
                    "mapTo": "code",
                    "type": "literal",
                    "value": 200
                  },
                  {
                    "mapTo": "message",
                    "type": "assign",
                    "value": "$activity[jsmapper_18].value"
                  }
                ]
              }
            }
          },
          {
            "id": "log_20",
            "name": "Log List",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
              "input": {
                "flowInfo": false,
                "addToFlow": true
              },
              "mappings": {
                "input": [
                  {
                    "type": "assign",
                    "value": "$activity[app_16].value",
                    "mapTo": "message"
                  }
                ]
              }
            }
          },
          {
            "id": "jsmapper_21",
            "name": "Map List",
            "description": "JSONata Mapper Activity",
            "activity": {
              "ref": "github.com/yxuco/flogo-components/activity/jsmapper",
              "input": {
                "mapexpr": "{\"port\":{{$env[HTTPPORT]}},\"event\":{{$flow.event}},\"street\":{{$flow.content}}.address.street,\"message\":{{$activity[log_2].message}},\"vehicle\":{{$activity[app_16].value}}.vehicle.{\"make\":make,\"year\":year,\"vin\":vin.value}}"
              }
            }
          },
          {
            "id": "actreturn_22",
            "name": "Return List",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/actreturn",
              "input": {
                "mappings": [
                  {
                    "mapTo": "code",
                    "type": "literal",
                    "value": 200
                  },
                  {
                    "mapTo": "message",
                    "type": "assign",
                    "value": "$activity[jsmapper_21].value"
                  }
                ]
              }
            }
          }
